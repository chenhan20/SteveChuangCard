extends ../common/layout

block append CV_Nav
block append modal
block buttonPage
block footer
block content
    h1 Demo02 NBA Score
    .container-fluid
      ul.Demo02-2
        .iconDate.col-ms-12.col-xl-4
          a(href='#',data-toggle="tooltip" ,title='Previous Day',data-placement="bottom",v-on:click='LessDate')
            i.icon.fas.fa-angle-left(style='font-size:30px')  
          h4.NBAdate {{Date.yyyy}}年{{Date.mm}}月{{Date.dd}}
          a(href='#',data-toggle="tooltip" ,title='Next Day',v-on:click='AddDate')
            i.icon.fas.fa-angle-right(style='font-size:30px')
          h4  共有 {{object.length}} 場比賽  
          h4(v-if="object.length==0") No games on this date.
          h4(v-else-if="object[0]!=null") Playoffs
          h4(v-else) Regular season
        li.Nba.col-sm-12.col-xl-5(v-for='value in object') 
          h3(v-if="value.status=='1'") 尚未開打  
          h3(v-else-if="value.status=='2'") Live  
          h3(v-else) 已結束 
          .Game(v-on:click='GameDetail')
            .gameId(v-show="false") {{value.gameId}}
            .row
              .hTeamtriCode(v-show="false") {{value.hTeam.triCode}}
              //- img.team-img.col-2(v-bind:src="value.hTeam.logo")
              .TeamLogo.col-1(:style="bg_css(value.hTeam.logo)")
              a.hTeam.col-9  {{value.hTeam.name}}
              a.no.col-1(v-if="value.status=='1' || value.status=='2'") 
              a.win.col-1(v-else-if='value.hTeam.win') W 
              a.lose.col-1(v-else) L
              a.hScore.col-1  {{value.hTeam.score=="" ? 0 :value.hTeam.score}}
            .row
              .vTeamtriCode(v-show="false") {{value.vTeam.triCode}}
              //- img.team-img.col-2(v-bind:src="value.vTeam.logo")
              .TeamLogo.col-1(:style="bg_css(value.vTeam.logo)") 
              a.vTeam.col-9 {{value.vTeam.name}} 
              a.no.col-1(v-if="value.status=='1' || value.status=='2'")
              a.win.col-1(v-else-if='value.vTeam.win') W
              a.lose.col-1(v-else) L
              a.vScore.col-1  {{value.vTeam.score=="" ? 0 :value.vTeam.score}}
      .bouncing-loader
        div
        div
        div
        div
      

    script(src='/js/Demo02.js')
    link(rel='stylesheet', href='/stylesheets/Demo02.css')

